{
  "name": "@tsbuffer/validator",
  "version": "3.0.0-dev.0",
  "description": "Validator for TSBuffer values",
  "main": "./dist/index.js",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npx mocha",
    "coverage": "nyc mocha test/**/*.test.ts && start coverage\\index.html",
    "dev": "rollup -c -w",
    "check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts --fix",
    "build": "shx rm -rf dist && rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k8w/tsbuffer.git"
  },
  "keywords": [
    "k8w",
    "tsbuffer",
    "typescript",
    "validator",
    "interface",
    "protobuf",
    "buffer",
    "json",
    "schema",
    "validate"
  ],
  "author": "k8w",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/k8w/tsbuffer-validator/issues"
  },
  "homepage": "https://github.com/k8w/tsbuffer/tree/main/packages/validator#readme",
  "dependencies": {
    "@tsbuffer/schema": "workspace:^",
    "tslib": "*"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "coverage",
      "test",
      "dist"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "devDependencies": {
    "k8w-extend-native": "^1.4.6",
    "rollup": "^2.79.1",
    "rollup-plugin-dts": "^4.2.3",
    "rollup-plugin-typescript2": "^0.34.1",
    "@types/mocha": "^8.2.3",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0"
  },
  "peerDependencies": {
    "k8w-extend-native": "^1.4.6"
  }
}